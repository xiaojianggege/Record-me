.wrapper {
  width: 100vw;
  height: 100vh;
  padding: 15rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.head-img {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  width: 100%;
  height: 700rpx;
}
.content {
}
.load{
  position: absolute;
  top: 70%;
  left: 50%; 
}
.content-top {
  margin: -100rpx 0 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  text-align: right;
}
.content-top__time{
  background-color: #fff;
  padding: 26rpx; 
  color: #000;
  font-family: Arial, Helvetica, sans-serif;
  box-shadow:8rpx 0rpx 8rpx rgb(202, 192, 192) inset;
}
.content-top__name{
  display: inline-block;
  background-color: #000;
  opacity: 0.4;
  width: 170rpx;
  text-align: center;
  color: #fff;
  z-index: 90;
}
.content-top__portrait {
  position: absolute;
  left: 480rpx;
  top:-12rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 100;
}
.portrait {
  width: 100%;
  height: 100%;
}






