.wrapper {
  width: 100vw;
  height: 100vh;
  padding: 15rpx;
  box-sizing: border-box;
  background-color: #ecf2f7;
}

.head-img {
  border-radius: 10px;
  width: 100%;
  height: 700rpx;
}

.content {
}

.content-top {
  margin-top: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  display: flex;
  justify-content: space-between;

}
.content-top__time{
  display: inline-block;
  background-color: #6698CB;
  padding: 0rpx 50rpx 0rpx 10rpx; 
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
  color: #fff;
}
.zhezhao-container{
  width: 40rpx;
  height: 80rpx;
  overflow: hidden;
  margin-right: -190rpx;
  z-index: 95;
}
.zhezhao{
  width: 80rpx;
  height: 80rpx;
  background-color: #ecf2f7;
  border-radius: 50%;
  float: right;
}
.content-top__name{
  display: inline-block;
  background-color: #6698CB;
  width: 170rpx;
  text-align: center;
  color: #fff;
  z-index: 90;
}

.content-top__portrait {
  position: absolute;
  left: 455rpx;
  top:-12rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 100;
}

.portrait {
  width: 100%;
  height: 100%;
}


.content-top__tips {
  color: #000;
  display: inline-block;
  background-color: #fff;
  font-size: 30rpx;
  padding: 0 20rpx;
  position: absolute;
  box-shadow: 5rpx 5rpx 5rpx #888888;
  left: 50%;
  transform: translate(-50%);
  top: 60rpx;
}






