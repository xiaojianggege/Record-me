/* miniprogram/pages/commitDynamic/commitDynamic.wxss */
.wrapper{
  width: 100%;
  height: 100vh;
  background-color: #F5FAFE;
}
.header-content{
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
}
.btn{
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 30rpx;
  background-color: rgb(254, 67, 101);
  color: #fff;
  border-radius: 12px;
  font-family: Arial, Helvetica, sans-serif;
  letter-spacing: 1px;
}
.main{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx 20rpx;
}
.user-info{
  display: flex;
  align-items: center;
}
.user-info .user_avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.user_avatar image{
  width: 100%;
}
.user-info .user_name{
  font-size: 26rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.content{
  margin: 16rpx 8rpx 0;
  width: 100%;
  font-size: 26rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.addImage{
  margin-top: 20rpx;
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F5FAFE;
}
.addImage image{
  width:50rpx;
  
}