.wrapper {
  width: 100vw;
  height: 100vh;
  padding: 15rpx;
  box-sizing: border-box;
  background-color: #ecf2f7;
}
.content-top__tips {
  color: #000;
  display: inline-block;
  background-color: #fff;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  position: absolute;
  box-shadow: 5rpx 5rpx 5rpx #888888;
  left: 50%;
  transform: translate(-50%);
}
.content-time{
  display: flex;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 10rpx;
}
.content-time__icon{
  width: 48rpx;
  height: 48rpx;  
}
.content-text{
  width: 100%;
  height: 300rpx;
  border-top: 1px solid #000;
  border-bottom: 1px solid #000;
}
.btn {
  left: 50%;
  transform: translate(-50%);
  bottom: 100rpx;
  position: fixed;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(92, 89, 89);
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
