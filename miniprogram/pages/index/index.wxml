<!-- miniprogram/pages/index/index.wxml -->
<view class="container">
  <view class="bg-image">
    <image src="../../images/index-background.jpg" alt="" mode="widthFix" />
  </view>
  <!-- 头部 -->
  <view class="content-wrapper">
    <view class="header">
      <!-- 热气球 -->
      <image src="../../images/Hot-air-balloon.png" mode="widthFix" />
      <image src="../../images/Hot-air-balloon.png" mode="widthFix" />
    </view>
    <!-- 中部banner栏 -->
    <view class="banner">
      <swiper class="slogan-wrapper">
        <swiper-item class="slogan">海阔凭鱼跃，天高任鸟飞</swiper-item>
      </swiper>
      <view class="showTime">
        <text>2020-08-22 20：22</text>
      </view>
    </view>
    <!-- 两个按钮 -->
    <view class="button-wrapper">
      <view class="button-content">
        <view class="line"></view>
        <view class="button-pad">
          <view class="button">
            <image src="../../images/发动态 (1).png" alt="" />
          </view>
        </view>
      </view>
      <view class="button-content">
        <view class="line"></view>
        <view class="button-pad">
          <view class="button">
            <image src="../../images/记录 (1).png" alt="" />
          </view>
        </view>
      </view>
    </view>
    <!-- 绿色小气球 -->
    <view class="icon">
      <image src="../../images/balloon.png" mode="widthFix"/>
    </view>
  </view>
</view>